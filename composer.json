{
	"name": "fortkle/owl",
	"description": "Owl is a simple team collaboration tool.",
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
        "illuminate/html": "~5.0",
        "doctrine/dbal": "~2.3",
        "twitter/bootstrap": "3.3.*",
        "cebe/markdown": "1.0.*",
        "cogpowered/finediff": "0.3.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Owl\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
